<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <EditText
            android:id="@+id/editCurrentCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorDark"
            android:textSize="70sp"
            android:hint="0"
            android:digits="0123456789"
            android:inputType="number" />

        <View
            android:id="@+id/viewSplit"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_below="@+id/editCurrentCalories"
            android:layout_marginHorizontal="70sp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/textCalorieGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/viewSplit"
            android:textColor="@android:color/black"
            android:textSize="70sp"
            android:text="0" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonEndDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20sp"
        android:textColor="@android:color/white"
        android:text="@string/end_day" />


</RelativeLayout>